{
	"biome.requireConfiguration": true,
	"[typescript]": {
		"editor.defaultFormatter": "prettier.prettier-vscode"
	},
	"[javascript]": {
		"editor.defaultFormatter": "prettier.prettier-vscode"
	},
	"[svelte]": {
		"editor.defaultFormatter": "svelte.svelte-vscode"
	},
	"[json]": {
		"editor.defaultFormatter": "prettier.prettier-vscode"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "prettier.prettier-vscode"
	},
	"[html]": {
		"editor.defaultFormatter": "prettier.prettier-vscode"
	},
	"svelte.enable-ts-plugin": true,
	"eslint.validate": ["svelte", "typescript", "javascript"]
}
